<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
        "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
    <package name="App" extends="struts-default">
        <action name="createUser" class="com.controller.NewUser" method="execute">
            <result name="success">/index.jsp</result>
            <result name="error">/index.jsp</result>
        </action>

        <action name="createProposal" class="com.controller.ProposalPost2" method="execute">
            <result name="success">/index.jsp</result>
            <result name="error">/index.jsp</result>
        </action>

        <action name="login" class="com.controller.Login" method="execute">
            <result name="success">/admin.jsp</result>
            <result name="error">/index.jsp</result>
        </action>

        <action name="createAdvert" class="com.controller.NewAdvert" method="execute">
            <interceptor-ref name="fileUpload">
                <param name="maximumSize">102097152</param>
                <param name="allowedTypes">
                    image/png,image/jpeg,image/pjpeg
                </param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"></interceptor-ref>
            <result name="success">/admin.jsp</result>
            <result name="error">/admin.jsp</result>
            <result name="input">/admin.jsp</result>
        </action>

        <action name="image" class="com.controller.ShowImage">
            <result name="success">/admin.jsp</result>
        </action>
    </package>

</struts>